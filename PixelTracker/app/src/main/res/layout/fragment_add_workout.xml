<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateWorkoutFragment">

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Insert Workout Name: "
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/add_workout_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/workout_name"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/add_calm_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Calm Weight:"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/workout_name"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/add_calm_weight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/workout_name"
        app:layout_constraintTop_toTopOf="@id/add_calm_weight_label"
        app:layout_constraintStart_toEndOf="@id/add_calm_weight_label"
        />
    <TextView
        android:id="@+id/add_max_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Max Weight: "
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/add_calm_weight_label"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/add_max_weight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/add_max_weight_label"
        app:layout_constraintStart_toEndOf="@id/add_max_weight_label"
        />
    <Button
        android:id="@+id/add_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Workout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_max_weight_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>