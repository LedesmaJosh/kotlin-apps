<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnimationActivity">

    <ImageView
        android:id="@+id/animation_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gpc_logo"
        android:layout_marginRight="@dimen/animation_logo_right_margin"
        android:layout_marginLeft="@dimen/animation_logo_left_margin"
        android:layout_marginTop="@dimen/animation_logo_top_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/animation_fade_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/animation_button_margins"
        android:layout_marginLeft="@dimen/animation_button_margins"
        android:layout_marginRight="@dimen/animation_button_margins"
        android:background="@drawable/blue_button_ripple"
        android:text="@string/fade_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/button_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>