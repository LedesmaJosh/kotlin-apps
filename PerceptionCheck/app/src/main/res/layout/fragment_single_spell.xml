<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleSpellFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp">

    <TextView
        android:id="@+id/single_spell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        style="@style/TextAppearance.AppCompat.Large"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/spell_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level"
        app:layout_constraintTop_toBottomOf="@id/single_spell_name"
        app:layout_constraintLeft_toLeftOf="parent"
/>

    <TextView
        android:id="@+id/spell_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="school"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toBottomOf="@id/single_spell_name"
        app:layout_constraintLeft_toRightOf="@id/spell_level"
        />
    <TextView
        android:id="@+id/school_class_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = " | "
        app:layout_constraintLeft_toRightOf="@id/spell_school"
        app:layout_constraintTop_toBottomOf="@id/single_spell_name"/>
    <TextView
        android:id="@+id/spell_Classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="class"
        app:layout_constraintLeft_toRightOf="@id/school_class_divider"
        app:layout_constraintTop_toBottomOf="@id/single_spell_name"/>
    <TextView
        android:id="@+id/spell_component_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Component: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_level"/>
    <TextView
        android:id="@+id/spell_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="components"
        app:layout_constraintTop_toTopOf="@id/spell_component_label"
        app:layout_constraintLeft_toRightOf="@id/spell_component_label"
        app:layout_constraintBottom_toBottomOf="@id/spell_component_label"/>
    <TextView
        android:id="@+id/spell_material_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text = "Materials: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_component_label"/>
    <TextView
        android:id="@+id/spell_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="materials"
        app:layout_constraintTop_toTopOf="@id/spell_material_label"
        app:layout_constraintLeft_toRightOf="@id/spell_material_label"
        />

    <TextView
        android:id="@+id/spell_casting_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text = "Casting Time: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_material"/>
    <TextView
        android:id="@+id/spell_casting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="casting time"
        app:layout_constraintTop_toTopOf="@id/spell_casting_time_label"
        app:layout_constraintLeft_toRightOf="@id/spell_casting_time_label"
        />
    <TextView
        android:id="@+id/spell_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text = "Duration: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_casting_time_label"/>
    <TextView
        android:id="@+id/spell_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duration time"
        app:layout_constraintTop_toTopOf="@id/spell_duration_label"
        app:layout_constraintLeft_toRightOf="@id/spell_duration_label"
        app:layout_constraintBottom_toBottomOf="@id/spell_duration_label"/>
    <TextView
        android:id="@+id/spell_range_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text = "Range: "
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_duration_label"/>
    <TextView
        android:id="@+id/spell_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="range range"
        app:layout_constraintTop_toTopOf="@id/spell_range_label"
        app:layout_constraintLeft_toRightOf="@id/spell_range_label"
        app:layout_constraintBottom_toBottomOf="@id/spell_range_label"/>
    <TextView
        android:id="@+id/spell_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Description:"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_range_label"/>
    <TextView
        android:id="@+id/spell_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        app:layout_constraintTop_toBottomOf="@id/spell_description_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/spell_higher_level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="At Higher Level: "
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_description"/>
    <TextView
        android:id="@+id/spell_higher_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="higher level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_higher_level_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>